{
  "name": "hiberbee-graphql",
  "description": "GraphQL Kit",
  "keywords": [
    "api",
    "nodejs",
    "apollo",
    "graphql"
  ],
  "homepage": "https://graphql.hiberbee.dev",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Vlad Volkov",
      "email": "vlad@hiberbee.com",
      "url": "https://github.com/vladyslavvolkov"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad@hiberbee.com",
    "url": "https://github.com/vladyslavvolkov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hiberbee/graphql"
  },
  "engines": {
    "npm": "^6.0",
    "yarn": "^1.20"
  },
  "readme": "README.md",
  "dependencies": {

    "apollo-datasource": "^0.7",
    "apollo-datasource-graphql": "^1.3",
    "apollo-datasource-rest": "^0.9",
    "apollo-link-persisted-queries": "^0.2",
    "apollo-server": "^2.13",
    "apollo-server-cache-memcached": "^0.6",
    "apollo-server-cache-redis": "^1.2",
    "apollo-server-caching": "^0.5",
    "apollo-server-plugin-response-cache": "^0.5",
    "commander": "^5.1",
    "graphql": "^15.0",
    "graphql-faker": "^2.0.0-rc.17",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@apollo/federation": "^0.15",
    "@apollo/gateway": "^0.15",
    "@graphql-codegen/cli": "^1.13",
    "@graphql-codegen/typescript": "^1.13",
    "@types/body-parser": "^1.19",
    "@types/cors": "^2.8",
    "@types/express": "^4.17",
    "@types/graphql-iso-date": "^3.3",
    "@types/ioredis": "^4.16",
    "@types/istanbul-lib-coverage": "^2.0",
    "@types/jest": "^25.2",
    "@types/jsonwebtoken": "^8.3",
    "@types/memcached": "^2.2",
    "@types/node": "^13.13",
    "@types/node-fetch": "^2.5",
    "@typescript-eslint/eslint-plugin": "^2.31",
    "@typescript-eslint/parser": "^2.31",
    "clean-webpack-plugin": "^3.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-graphql-loader": "^1.0.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "yarn graphql-codegen && yarn lint && yarn webpack --config=webpack.production.js",
    "watch": "yarn webpack --config=webpack.development.js",
    "lint": "yarn rimraf build && yarn prettier --write src/**/*.ts && yarn eslint --fix --quiet src/**/*.ts & yarn tsc",
    "test": "yarn jest",
    "start": "yarn build && node build/index.js server --playground --debug --tracing --introspection",
    "start:gateway": "node build/index.js gateway --playground --debug --tracing --introspection --port 4000",
    "start:server": "node build/index.js server --playground --debug --tracing --introspection --port 4001",
    "start:faker": "yarn graphql-faker src/main/graphql/faker/schema.graphql --port 4002"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "plugins": [],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "build/reports/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/**/__tests__/*.ts"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 140,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
