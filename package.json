{
  "name": "hiberbee-graphql",
  "description": "GraphQL Kit",
  "keywords": [
    "api",
    "nodejs",
    "apollo",
    "graphql"
  ],
  "homepage": "https://graphql.hiberbee.dev",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Vlad Volkov",
      "email": "vlad@hiberbee.com",
      "url": "https://github.com/vladyslavvolkov"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad@hiberbee.com",
    "url": "https://github.com/vladyslavvolkov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hiberbee/graphql"
  },
  "engines": {
    "npm": "^6.0",
    "yarn": "^1.20"
  },
  "readme": "README.md",
  "dependencies": {
    "@apollo/federation": "^0.14.0",
    "@apollo/gateway": "^0.14.1",
    "apollo-datasource": "^0.7.0",
    "apollo-datasource-graphql": "^1.3.2",
    "apollo-datasource-rest": "^0.8.1",
    "apollo-link-persisted-queries": "^0.2.2",
    "apollo-logger": "^0.3.3",
    "apollo-server": "^2.12.0",
    "apollo-server-cache-memcached": "^0.6.4",
    "apollo-server-cache-redis": "^1.1.6",
    "apollo-server-caching": "^0.5.1",
    "apollo-server-plugin-response-cache": "^0.4.1",
    "commander": "^5.0.0",
    "graphql": "^15.0.0",
    "graphql-faker": "^2.0.0-rc.17",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/ioredis": "^4.14.9",
    "@types/istanbul-lib-coverage": "^2.0.1",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/memcached": "^2.2.6",
    "@types/node": "^13.11.1",
    "@types/node-fetch": "^2.5.6",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^7.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "graphql-codegen && yarn lint && webpack",
    "lint": "rimraf build && prettier --write src/**/*.ts && eslint --fix --quiet src/**/*.ts & tsc",
    "test": "yarn jest",
    "start": "yarn start:server",
    "start:faker": "graphql-faker src/main/graphql/faker/schema.graphql",
    "start:gateway": "node build/index.js gateway --playground --debug --tracing --introspection",
    "start:server": "node build/index.js server --port 8000 --playground --debug --tracing --introspection",
    "watch": "nodemon -r dotenv/config src/main/typescript/index.ts apollo --playground --debug --tracing --introspection"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "plugins": [],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "build/reports/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/**/__tests__/*.ts"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 140,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
